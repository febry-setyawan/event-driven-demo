{
  "id": null,
  "uid": "saga-monitoring",
  "title": "Saga Pattern Monitoring",
  "tags": ["saga", "distributed-transactions"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Total Sagas",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_total",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Completed Sagas",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_completed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Failed Sagas",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_failed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Success Rate (%)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_success_rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 80,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Saga Status Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_completed",
          "legendFormat": "Completed",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_failed",
          "legendFormat": "Failed",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_processing",
          "legendFormat": "Processing",
          "refId": "C"
        }
      ]
    },
    {
      "id": 6,
      "title": "Saga Distribution",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_completed",
          "legendFormat": "Completed",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_failed",
          "legendFormat": "Failed",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "saga_processing",
          "legendFormat": "Processing",
          "refId": "C"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
