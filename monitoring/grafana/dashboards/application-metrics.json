{
  "id": null,
  "uid": "event-driven-metrics",
  "title": "Event-Driven Architecture Metrics",
  "tags": ["event-driven", "microservices"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Response Time (Average)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "sum(rate(http_server_requests_seconds_sum[5m])) by (application) / sum(rate(http_server_requests_seconds_count[5m])) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 3,
      "title": "JVM Memory Usage",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"}) by (application) / sum(jvm_memory_committed_bytes{area=\"heap\"}) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 4,
      "title": "Kafka Messages Published",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "PAE45454D0EDB9216"
          },
          "expr": "sum(rate(kafka_producer_record_send_total[5m])) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msgs/s"
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
